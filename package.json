{
  "name": "buildwithnexus",
  "version": "0.2.4",
  "description": "Launch an autonomous AI runtime with triple-nested VM isolation in one command",
  "type": "module",
  "bin": {
    "buildwithnexus": "dist/bin.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "bundle": "bash scripts/bundle-release.sh",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run bundle"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "nexus",
    "ai",
    "agents",
    "orchestration",
    "vm",
    "qemu",
    "isolation",
    "autonomous"
  ],
  "author": "Garrett Eaglin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Garrett-s-Apps/buildwithnexus.git"
  },
  "homepage": "https://buildwithnexus.dev",
  "dependencies": {
    "@inquirer/prompts": "^8.2.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "execa": "^9.5.2",
    "inquirer": "^12.3.2",
    "node-ssh": "^13.2.1",
    "ora": "^8.1.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
